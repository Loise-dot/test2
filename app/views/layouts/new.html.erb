<!-- views/sessions/new.html.erb -->

<h1>Login</h1>

<%= form_with url: login_path, method: :post do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username, autocomplete: "username" %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, autocomplete: "current-password" %>
  </div>

  <%= form.submit "Log in" %>
<% end %>
